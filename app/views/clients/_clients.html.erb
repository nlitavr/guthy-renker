
<div class="jumbotron center">
  <div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">Guthy|Renker Clients</div>
    <div class="panel-body">
      <table class="table table-hover">
        <tr>
          <th>Client Name</th>
          <th>Description</th>
          <th>Activity</th>
          <th><span class="glyphicon glyphicon-remove"></span>
          </th>
        </tr>
        <% @clients.each do |c| %>
            <tr>
              <td><%= link_to c.client, edit_client_path(c.id) %></td>
              <td><%= c.description %></td>
              <% if c.active? %>
                  <td> Active</td>
              <% else %>
                  <td> In-Active</td>
              <% end %>
              <th><%= button_to 'Delete', c, method: :delete %></th>
            </tr>
        <% end %>

      </table>
    </div>


  </div>
</div>