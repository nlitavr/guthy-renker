
<div class="jumbotron center" >
  <div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">Guthy|Renker Clients</div>
    <div class="panel-body">
      <table class="table table-hover">
        <tr>
          <th>Client Name</th>
          <th>Description</th>
          <th>Activity</th>
        </tr>
        <% @clients.each do |c| %>
        <tr>
          <td><%= link_to c.client, edit_client_path(c.id)  %></td>
          <td><%= c.description %></td>
        <% if c.active? %>
        <td> Active </td>
        <td>
          <button type="button" class="btn btn-default btn-sm">
            <span class="glyphicon glyphicon-remove"></span>
          </button>
        </td>
        <% else %>
        <td> In-Active </td>
        <% end %>
        </tr>
        <% end %>

      </table>
    </div>


  </div>
</div>